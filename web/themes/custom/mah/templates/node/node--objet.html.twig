<div class="container">
  <h2>{{ node.title.value }}</h2>

  <div class="my-3">Musée : {{ node.field_musee.entity.name.value }}</div>

  <div class="my-3">Date d'acquisition : {{ node.field_date.value|date('U')|format_date('date_courte_fr') }}</div>

  <div class="my-3">
    <h3>Légendes</h3>
    <ul>
      <li>{{ node.field_legende_1.value|raw }}</li>
      <li>{{ node.field_legende_2.value|raw }}</li>
      <li>{{ node.field_legende_3.value|raw }}</li>
      <li>{{ node.field_legende_4.value|raw }}</li>
      <li>{{ node.field_legende_5.value|raw }}</li>
      <li>{{ node.field_legende_6.value|raw }}</li>
    </ul>

  </div>

  <div class="my-3">
    {% set media = getMediaInfos(node.field_medias.target_id, 'large') %}
    <img class="" title="{{ media.name }} - {{ media.title }}" alt="{{ media.alt }}" src="{{ media.url }}">
  </div>

  <div class="chapo">{{ bamboo_render_field('field_chapo', 'node') }}</div>

  <div class="my-3">{{ bamboo_render_field('field_description', 'node') }}</div>

  <div class="my-3">Thème de collection :
    <ul>
    {% for theme in node.field_theme_collection %}
      <li>{{ theme.entity.name.value }}</li>
    {% endfor %}
    </ul>
  </div>

  {% if node.field_liens|length > 0 or node.field_fichiers|length > 0 %}
    <div class="my-3 alert-dark p-3">
      <h4 class="text-uppercase">En savoir +</h4>
      <div class="">
        {{ bamboo_render_field('field_liens', 'node') }}
        {{ bamboo_render_field('field_fichiers', 'node') }}
      </div>
    </div>
  {% endif %}

  <div id="timeline" name="timeline">
    {{ bamboo_render_block('timeline_block') }}
  </div>

  {% if node.field_objets_lies|length > 0 %}
    <div class="row">
    {% for nodes in node.field_objets_lies %}
      {% set node = bamboo_load_entity('node', nodes.target_id) %}
      {% set media = getMediaInfos(node.field_medias.target_id, '500_recadrer') %}
      {% set url = path('entity.node.canonical', {'node': node.id}) %}

      <div class="my-3 col-lg-4 p-3">
        <a href="{{ url }}">
          <img class="w-100" title="{{ media.name }} - {{ media.copy }}" alt="{{ media.alt }}"
               src="{{ media.url }}">
          <h5 class="text-center txt-white">{{ node.title.value }}</h5>
        </a>
      </div>
    {% endfor %}
    </div>
  {% endif %}

</div>
