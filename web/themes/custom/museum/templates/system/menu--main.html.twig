{% macro menu_links(items, attributes, menu_level) %}
    {% import _self as menus %}
    {% if items %}
        <div class="container-fluid p-0 bg-black-light" id="main-menu">
            <div class="burger p-2 d-lg-none d-xl-none">
                <img src="/themes/custom/museum/images/burger.png">
              <button type="button" class="close txt-white" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="row m-0 justify-content-around main-menu-content">

                <div class="col-12 bg-blue-light d-lg-none d-xl-none">
                    <div class="row justify-content-around p-1">
                        <div class="col-md-3 col-sm-12 py-1">
                          <a href="#">
                            <span class="txt-white">BLOG</span>
                          </a>
                        </div>
                        <div class="col-md-3 col-sm-12 py-1">
                          <a href="#">
                            <span class="txt-white">ESPACE PRO</span>
                          </a>
                        </div>
                      <div class="col-md-3 col-sm-12 py-1">
                        <a href="#">
                          <span class="txt-white">PARTENAIRES</span>
                        </a>
                      </div>
                        <div class="col-md-3 col-sm-12 py-1">
                        <span class="d-block" data-toggle="modal" data-target="#search-block">
                            <img class="" width="25" src="/themes/custom/museum/images/search.png">
                        </span>
                        </div>
                    </div>
                </div>

                {% for item in items %}
                    <div class="col-md-12 col-lg-2 p-0 item-menu text-align-center {% if(loop.last) %} last_item {% endif %}">
                        <a data-menu="nav_lvl_{{ loop.index }}"
                           data-menu-resp="nav_lvl_rest_{{ loop.index }}"
                           class="{% if(not loop.last) %}nav_lvl_1{% endif %} px-1 py-2 d-inline-block"
                           href="{{ item.url }}">
                            {{ item.title }}
                        </a>
                    </div>
                    <div id="nav_lvl_rest_{{ loop.index }}" class="col-12 px-3 sub-menu bg-white shadow">
                        {% if item.below %}
                            {% for sub_item in item.below %}
                                <div class="sub-menu-item">
                                    <a href="{{ sub_item.url }}">{{ sub_item.title }}</a>
                                    <ul class="list-menu sub-sub-menu-item">
                                        {% if sub_item.below %}
                                            {% for sub_sub_item in sub_item.below %}
                                                <li>
                                                    <a href="{{ sub_sub_item.url }}">{{ sub_sub_item.title }}</a>
                                                </li>
                                            {% endfor %}
                                        {% endif %}
                                    </ul>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
            <div class="row m-0 bg-white">
                {% for item in items %}
                    <div id="nav_lvl_{{ loop.index }}" class="col-12 px-3 sub-menu bg-white shadow-sm">
                        {% if item.below %}
                            {% for sub_item in item.below %}
                                <div class="sub-menu-item">
                                    <a href="{{ sub_item.url }}">
                                        {{ bamboo_render_image(sub_item.url.options.menu_icon.fid, 'medium') }}<br/>
                                        {{ sub_item.title }}
                                    </a>
                                    <ul class="list-unstyled sub-sub-menu-item">
                                        {% if sub_item.below %}
                                            {% for sub_sub_item in sub_item.below %}
                                                <li>
                                                  <a href="{{ sub_sub_item.url }}">{{ sub_sub_item.title }}</a>
                                                </li>
                                            {% endfor %}
                                        {% endif %}
                                    </ul>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endmacro %}
