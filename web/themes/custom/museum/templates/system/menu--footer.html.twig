{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}

    <div class="row py-5 pl-3">
    {% for item in items %}
      {% if loop.index == 1 or loop.index == 6 %}<div class="col-6">{% endif %}
        <a class="txt-white" href="{{ item.url }}">
          {{ item.title }}
        </a><br/>
      {% if loop.index == 5 or loop.last %}</div>{% endif %}
    {% endfor %}
    </div>

  {% endif %}
{% endmacro %}
