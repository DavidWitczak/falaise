{% set expo = bamboo_load_entity('node', node.field_expo_liee.target_id) %}
<div class="container-fluid m-0 p-0">
  <div class="banniere">
    {% set media = getMediaInfos(expo.field_medias.target_id, 'crop_banniere') %}
    <img class="w-100" title="{{ media.name }} - {{ media.copy }}" alt="{{ media.alt }}" src="{{ media.url }}">
  </div>
</div>

<div class="container content-image bg-white">
  <h1 class="text-center pt-4 mb-4">
    <img class="mr-2" width="55" src="/{{ directory }}/images/object.png">{{ expo.title.value }}
  </h1>
  <h4 class="text-center">{{ node.title.value }}</h4>
  <p class="text-center text-uppercase mb-5"> Du {{ expo.field_dates.value|date('U')|format_date('date_courte_fr') }}
    au {{ expo.field_dates.end_value|date('U')|format_date('date_courte_fr') }}</p>
  <div>{{ bamboo_render_block('menu_expo_block') }}</div>
  <div class="chapo"><strong>{{ bamboo_render_field('field_chapo', 'node') }}</strong></div>

  {% for paragraph in node.field_bloc_txt %}
    {% set paragraph_entity = bamboo_load_entity('paragraph', paragraph.target_id) %}
    {% set etat = paragraph_entity.field_etat_bloc.value %}
    {% set title = paragraph_entity.field_titre.value %}
    {% set corps = paragraph_entity.field_corps_texte.value %}
    <div class="clearfix">
      <h2 class="{{ etat }} txt-blue text-align-center border-bt-bleu mt-5 mb-3">
        {% if etat == 'bloc_open' or etat == 'bloc_close' %}
          <img class="float-left" src="{{ url('<front>') }}{{ directory }}/images/arrow_bloc.png">
        {% endif %}
        {{ title }}
      </h2>
      <div class="description">
        {{ bamboo_render_field('field_corps_texte', 'paragraph', paragraph.target_id) }}
      </div>
    </div>
  {% endfor %}

  <div class="row">
    {% for image in node.field_medias %}
      {% set media = getMediaInfos(image.target_id, 'carre_crop') %}
      <div class="col-sm-3 my-3">
        <a href="{{ media.url_full }}" data-fancybox="gallery" data-caption="{{ media.name }} - {{ media.copy }}">
          <img class="w-100" title="{{ media.name }} - {{ media.copy }}" alt="{{ media.alt }}" width="95%"
               src="{{ media.url }}">
        </a>
      </div>
    {% endfor %}
  </div>
  {% if node.field_liens|length > 0 or node.field_fichiers|length > 0 %}
    <div class="bg-blue p-4 my-5">
      <h4 class="text-uppercase p-0">En savoir +</h4>
      <div class="txt-white">
        {{ bamboo_render_field('field_liens', 'node') }}
        {{ bamboo_render_field('field_fichiers', 'node') }}
      </div>
    </div>
  {% endif %}
</div>
