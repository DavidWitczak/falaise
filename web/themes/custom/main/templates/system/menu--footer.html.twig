{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    <div id="footer-menu" class="">
      <ul class="nav">
        {% for item in items %}
          <li class="nav-item">
            <a class="nav-link text-align-center txt-white font-small pl-0 pr-0" href="{{ item.url }}">
              {{ item.title }}{% if not loop.last %}&nbsp;&nbsp;|&nbsp;&nbsp;{% endif %}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
{% endmacro %}
