<div class="container-fluid bg-grey py-2">
  <div class="row my-5">
    {% for object in var.object %}
      {% set media = getMediaInfos(object.visuel_id, '500_recadrer') %}
      <div class="col-lg-3">
        <a href="{{ object.url }}">
          <img class="w-100" title="{{ media.name }} - {{ media.title }}" alt="{{ media.alt }}" src="{{ media.url }}">
          <h5 class="mt-2 mb-0">{{ object.title }}</h5>
        </a>
      </div>
    {% endfor %}
  </div>
</div>
