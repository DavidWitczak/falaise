{% if var.expo %}
    <div class="container mb-5">
        <div class="row">

            <div class="col-sm-6 col-lg-3 mb-1">
                {% set media = getMediaInfos(var.expo_liee.media_id, 'media_entity_browser_thumbnail') %}

                {% if var.current_id == var.expo_liee.id %}
                    {% set class_link = 'txt-blue' %}
                    {% set div_color = '<div class="div_color"></div>' %}
                {% else %}
                    {% set class_link = 'txt-black' %}
                    {% set div_color = '' %}
                {% endif %}

                <a class="" href=" {{ var.expo_liee.url }} ">
                    <div style="position: relative">
                        <img class="w-100" title="{{ media.title }}" alt="{{ media.name }}" src="{{ media.url }}">
                        {{ div_color|raw }}
                    </div>
                    <div class="row mx-0 align-items-center">
                        <div class="col text-align-center">
                            <h5 class="{{ class_link }} font-weight-bold">Pr√©sentation</h5>
                        </div>
                    </div>
                </a>
            </div>

            {% for node in var.expo %}
                {% set media = getMediaInfos(node.media_id, 'media_entity_browser_thumbnail') %}

                {% if var.current_id == node.current_expo_liee_id %}
                    {% set class_link = 'txt-blue' %}
                    {% set div_color = '<div class="div_color"></div>' %}
                {% else %}
                    {% set class_link = 'txt-black' %}
                    {% set div_color = '' %}
                {% endif %}

                <div class="col-sm-6 col-lg-3 mb-1">
                    <a class="" href=" {{ node.url }} ">
                        <div style="position: relative">
                            <img class="w-100" title="{{ media.title }}" alt="{{ media.name }}" src="{{ media.url }}">
                            {{ div_color|raw }}
                        </div>
                        <div class="row mx-0 align-items-center">
                            <div class="col text-align-center">
                                <h5 class="{{ class_link }} font-weight-bold">{{ node.title }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
