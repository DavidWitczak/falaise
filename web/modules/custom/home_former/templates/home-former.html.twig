<div class="container-fluid p-0 banner">
  {% set media = getMediaInfos(750, 'pano_crop') %}
  <img class="w-100" title="{{ media.name }} - {{ media.title }}" alt="{{ media.alt }}" src="{{ media.url }}">
</div>

<div class="container bg-white sub-banner">

  {{ bamboo_render_block('system_breadcrumb_block') }}

  <h1 id="filter" name="filter" class="bebas text-uppercase">Toutes les disciplines</h1>
  <div class="chapo mb-5">
    {{ bamboo_config_get('site_config.config', 'se_former')['value']|raw }}
  </div>

  <div class="row block-collapse collapse show">
    <div class="col-lg-5">
      <hr class="bg-red"/>
    </div>
    <div class="col-lg-2 text-align-center">
      <button class="btn btn-outline-danger text-uppercase" data-toggle="collapse" data-target=".block-collapse">
        Afficher plus
      </button>
    </div>
    <div class="col-lg-5">
      <hr class="bg-red"/>
    </div>
  </div>

  <div class="collapse block-collapse" id="se_former">
    <div class="">
      {{ bamboo_config_get('site_config.config', 'se_former_suite')['value']|raw }}</div>
  </div>

  <div class="row collapse block-collapse">
    <div class="col-lg-5">
      <hr class="bg-red"/>
    </div>
    <div class="col-lg-2 text-align-center">
      <button class="btn btn-outline-danger text-uppercase" data-toggle="collapse" data-target=".block-collapse">
        Afficher moins
      </button>
    </div>
    <div class="col-lg-5">
      <hr class="bg-red"/>
    </div>
  </div>

  <div id="block-webform" class="mt-6 mb-4">
    <h2 class="bebas text-uppercase mb-4">Filtrer les disciplines par :</h2>
    {{ bamboo_render_entity('webform', 'se_former') }}
  </div>

</div>

<div class="container-fluid bg-black mt-8 py-5">
  <div class="container list-content">
    <div class="row">
      {% if var.former %}
        {% for discipline in var.former %}
          {% set media = getMediaInfos(discipline.visuel_id, 'carre_crop') %}
          <div class="col-lg-2 col-md-4 col-sm-6 mb-5 zoom-img">
            <a href="{{ discipline.url }}">
              <img class="w-100" title="{{ media.name }} - {{ media.title }}" alt="{{ media.alt }}"
                   src="{{ media.url }}">
            </a>
            <a href="{{ discipline.url }}">
              <div class="w-100 border-tag tag-{{ discipline.tid.target_id }}"></div>
              <div class="txt-white h5 bebas">{{ discipline.title }}</div>
            </a>
          </div>
        {% endfor %}
      {% else %}
        <h4 class="txt-white text-uppercase mt-8">Aucun r√©sultat</h4>
      {% endif %}
    </div>
  </div>
</div>

{% include directory ~ '/templates/includes/inscription.html.twig' %}
